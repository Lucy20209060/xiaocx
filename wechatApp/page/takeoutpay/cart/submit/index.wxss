.submit {
  background-color: #f0f0f0;
  height: 100%;
}

page {
  height: 100%;
}

.submit .title {
  height: 100rpx;
  padding: 0 30rpx;
  line-height: 100rpx;
  color: rgb(51, 51, 51);
  font-size: 30rpx;
  border-bottom: 1px solid #dedfe0;
  background: #fff;
  overflow: hidden;
}

.list-food .food_li {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  color: rgb(51, 51, 51);
  font-size: 26rpx;
  position: relative;
  background: #fff;
}

.list-food .food_li .t2, .pay-money-box .t2 {
  position: absolute;
  right: 200rpx;
}

.list-food .food_li .t1 {
  color: rgb(142, 142, 142);
}

.pay-money-box {
  height: 80rpx;
  padding: 0 30rpx;
  line-height: 80rpx;
  position: relative;
  background: #fffde2;
  color: rgb(142, 142, 142);
}

.pay-money-box .t3 {
  color: rgb(255, 61, 94);
}


.footer {
  position: fixed;
  bottom: -1rpx;
  height: 100rpx;
  width: 100%;
  left: 0;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  z-index: 9999999999999999999;
}

.footer .rmb {
  line-height: 100rpx;
  padding-left: 110rpx;
  float: left;
  color: #ff3d5e;
}

.footer .sub {
  top: 0px;
  position: absolute;
  right: 0px;
  margin: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
  width: 200rpx;
  background-color: #ff8400;
  font-size:30rpx;
  border-radius: 8rpx;
}


.footer .num {
  position: absolute;
  background: #fff;
  width: 80rpx;
  height: 60rpx;
  left: 20rpx;
  top: 20rpx;
  z-index: 9999999999;
  text-align: center;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
}
