page{
  background-color: #f0f0f0;
}
.success .top{
  text-align: center;
  padding: 0 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color:#fff;
}
.success .top image{
  width: 128rpx;
  height: 128rpx;
  margin-top: 60rpx;
}

.success .top view{
  font-size: 30rpx;
}

.success .menu_list{
  padding: 30rpx;
  border-bottom: 20rpx solid #f0f0f0;
  background-color:#fff;
}

.success .menu_list .li{
  line-height: 60rpx;
}

.success .menu_list .t1{
  color: #999;
  width: 160rpx;
  display: inline-block;
}

.success .menu_list .t2{
  color: #666;
}

.success .title {
  height: 100rpx;
  padding: 0 30rpx;
  line-height: 100rpx;
  color: rgb(51, 51, 51);
  font-size: 30rpx;
  border-bottom: 1px solid #f0f0f0;
  background: #fff;
  font-weight: 800;
}

.list-food .food_li {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  color: rgb(51, 51, 51);
  font-size: 26rpx;
  position: relative;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.list-food .food_li .t2, .pay-money-box .t2 {
  position: absolute;
  right: 200rpx;
}

.list-food .food_li .t1 {
  color: rgb(142, 142, 142);
}

.success .foot{
  border-bottom: 20rpx solid #f0f0f0;
  font-size: 30rpx;
  text-align: right;
  padding-right: 30rpx;
  line-height: 90rpx;
  color: #333;
  background: #fff;
  font-weight: 800;
}

