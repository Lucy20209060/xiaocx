.section {
  height: 80rpx;
  overflow: hidden;
  font-size: 36rpx;
  color: #8e8e8e;
  border-bottom: 1px solid #f0f0f0;
  background: #fff;
}

.section  input {
  height: 80rpx;
  padding-left: 30px;
  display: block;
  font-size: 30rpx;
  color: #333;
  line-height: 80rpx;
  position: relative;
}

