page{
  background: #f0f0f0;
}
.address{
  margin-bottom: 130rpx;
}
.address .li{
  border-top: 20rpx solid #f0f0f0; 
  font-size: 30rpx;
  padding: 0 20rpx;
  background: #fff;
}

.address .li .top{
  line-height: 80rpx;
}

.address .li .top .phonenum{
  float: right;
}

.address .li .bottom{
  line-height: 80rpx;
}

.address .li .bottom text{
  padding-left: 40rpx;
}

.address .li .bottom text.t1{
  background: url(./../../image/x.png) no-repeat left;
  background-size: 30rpx 30rpx;
}

.address .li .bottom text.t1.active{
  background: url(./../../image/xx.png) no-repeat left;
  background-size: 30rpx 30rpx;
  
}

.address .li .bottom text.t2{
  background: url(./../../image/ed.png) no-repeat left;
  background-size: 30rpx 32rpx;
  float: right;
  margin-right: 30rpx;
}

.address .li .bottom text.t3{
  background: url(./../../image/de.png) no-repeat left;
  background-size: 30rpx 32rpx;
  float: right;
}

.address .li .p{
  padding: 12rpx 0;
  border-top: 2rpx solid #f0f0f0; 
  border-bottom: 2rpx solid #f0f0f0; 
  
}

.footer_added {
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    text-align: center;
    position: fixed;
    border-top: 1px solid #e5e5e5;
    -moz-box-shadow: 2px -4px 6px #e5e5e5;
    -webkit-box-shadow: 2px -4px 6px #e5e5e5;
    box-shadow: 2px -4px 6px #e5e5e5;
    bottom: 0px;
    left: 0px;
    background: #ffffff;
}

.footer_added text{
 background: url(./../../image/add.png) no-repeat left;
color: #ffc834;
background-size: 40rpx 40rpx;
padding-left: 60rpx;

}