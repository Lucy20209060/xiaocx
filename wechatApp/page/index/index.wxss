page {
  background: #f0f0f0;
}

swiper.swiper image, swiper.swiper {
  width: 750rpx;
  height: 360rpx;
  display: block;
}

.top {
  height: 100rpx;
  background: #fff;
  padding: 0 30rpx;
  color: #333;
}

.top .logo_box {
  padding-top: 13rpx;
  width: 74rpx;
  height: 74rpx;
  float: left;
}

.top .logo_box image {
  width: 74rpx;
  height: 74rpx;
  display: block;
  border-radius: 50%;
  /* border: 1rpx solid #ddd; */
   box-shadow: 0rpx 0rpx 4rpx rgba(0, 0, 0, 0.2); 
}

.top .tit {
  position: relative;
  float: left;
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  overflow: hidden;
  max-width: 400rpx;
  padding-right: 40rpx;
}

.top .tit image {
  position: absolute;
  right: 0px;
  top: 48rpx;
  padding-left: 20rpx;
  width: 24rpx;
  height: 13rpx;
}

.top .login_r {
  float: right;
  font-size: 24rpx;
  height: 100rpx;
  line-height: 100rpx;
  max-width: 160rpx;
  text-align: right;
  overflow: hidden;
}

.top .login_r .login {
  padding-right: 30rpx;
  position: relative;
}

.top .login_r .login::after {
  content: '';
  top: 6rpx;
  height: 30rpx;
  right: 15rpx;
  position: absolute;
  border-right: 1rpx solid #333;
}

.main2 {
  overflow: hidden;
}

.main2 .li {
  width: 25%;
  float: left;
  position: relative;
  box-sizing: border-box;
  background: #fff;
  text-align: center;
  padding-top: 35rpx;
}

.main2 .li image {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto;
}

.main2 .li text {
  width: 100%;
  font-size: 30rpx;
  display: inline-block;
  line-height: 90rpx;
  margin-bottom: 20rpx;
}

.btn_2 {
  overflow: hidden;
  background: #fff;
  text-align: center;
}
.btn_2 navigator {
  display: inline-block;
}

.i_btn {
  width: 350rpx;
  display: inline-block;
  height: 110rpx;
  color: #fff;
  line-height: 110rpx;
  border-radius: 10rpx;
  text-align: center;
}

.i_btn image {
  width: 52rpx;
  position: absolute;
  left: 0rpx;
  top: 35rpx;
}

.i_btn.i_btn1 {
  background: #f03c3c;
}

.i_btn.i_btn2 {
  background: #3d9bff;
  margin-left: 16rpx;
}

.i_btn.i_btn2 image {
  width: 37rpx;
  left: 12rpx;
}

.i_btn .text2 {
  line-height: 110rpx;
  font-size: 32rpx;
  position: relative;
  padding-left: 60rpx;
  width: 83rpx;
  margin: 0 auto;
}

.scrollView .q_tit {
  height: 95rpx;
  line-height: 90rpx;
  overflow: hidden;
  padding: 0 30rpx;
}

.scrollView image {
  width: 32rpx;
  transform: translateY(4rpx);
}

.scrollView .q_tit text {
  padding-left: 15rpx;
}

.scrollView .li {
  margin: 0 0 30rpx 30rpx;
  font-size: 24rpx;
  color: #666;
  position: relative;
}

.scrollView .more {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  height: 75rpx;
  line-height: 75rpx;
  transition: all 0.3s ease;
  border-bottom: 20rpx solid #f0f0f0;
}

.scrollView .more .box {
  width: 180rpx;
  margin: 0 auto;
  position: relative;
}

.scrollView .more image {
  position: absolute;
  width: 24rpx;
  top: 31rpx;
  right: 0;
  height: 13rpx;
}

.scrollView .more.ss image {
  transform: rotate(180deg);
}

.scrollView .li .t1 {
  font-size: 28rpx;
  color: #ffbf7a;
}

.scrollView .li .t1 text {
  font-size: 50rpx;
  color: #ff8400;
}

.scrollView .li:nth-of-type(2n) .t1 {
  color: #b9dafe;
}

.scrollView .li:nth-of-type(2n) .t1 text {
  color: #3687de;
}

.scrollView .li .t1 text.t {
  font-size: 40rpx;
  padding-right: 28rpx;
}

.scrollView .li .t2 {
  line-height: 35rpx;
  font-size: 24rpx;
  color: #666;
}

.scrollView .li .t3 {
  line-height: 40rpx;
  font-size: 20rpx;
  color: #999;
}

.scrollView .li .lq {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  padding: 25rpx 10rpx 20rpx 0rpx;
  box-sizing: border-box;
  height: 152rpx;
  width: 110rpx;
  line-height: 50rpx;
  word-wrap: break-word;
}

.scrollView .li .lq text {
  display: block;
  width: 100%;
}

.scrollView .li_box {
  height: 222rpx;
  overflow: hidden;
  transition: height 0.3s ease;
  padding: 0 30rpx;
}

.scrollView {
  padding-top: 25rpx;
  background: #fff;
  margin-bottom: 18rpx;
}

.scrollView  .li {
  width: 423rpx;
  height: 153rpx;
  display: inline-block;
  background: url(https://lingju360.natappvip.cc/miniapp/resources/image/index/b1.png) no-repeat right;
  background-color: #edf6ff;
  padding-left: 30rpx;
  background-size: 423rpx 153rpx;
}

.scrollView  .li:nth-of-type(2n+1) {
  background: url(https://lingju360.natappvip.cc/miniapp/resources/image/index/b2.png) no-repeat right;
  background-color: #fff6ed;
  background-size: 423rpx 153rpx;
}

.scrollView  .li:last-of-type {
  margin-right: 30rpx;
}

.menu-recommended .menu-recommended-left {
  float: left;
  border-right: 1px solid #f0f0f0;
}

.menu-recommended .menu-recommended-left,
.index-box .menu-recommended .menu-recommended-right {
  width: 50%;
  height: 328rpx;
  box-sizing: border-box;
}

.menu-recommended .menu-recommended-left .menu-recommended-left-top,
.menu-recommended .menu-recommended-right .menu-recommended-right-top {
  width: 100%;
  overflow: hidden;
}

.menu-recommended .menu-recommended-left .menu-recommended-left-bottom {
  padding: 20rpx;
  text-align: center;
}

.menu-recommended .menu-recommended-left .menu-recommended-left-bottom image {
  width: 260rpx;
  height: 260rpx;
  border-radius: 50% 50% 50% 50%;
}

.menu-recommended .empty-box {
  margin-top: 30rpx;
}

.menu-recommended .empty-box.tt1 {
  padding-left: 60rpx;
}

.menu-recommended .empty-box text {
  color: #fd7154;
  display: block;
  font-size: 32rpx;
  font-weight: 700;
}

.menu-recommended .empty-box.tt2 text {
  color: #4485ff;
}

.menu-recommended .empty-box.tt3 text {
  color: #ffa545;
}

.menu-recommended .empty-box text.t2 {
  color: #8e8e8e;
  margin-top: 10rpx;
  font-size: 24rpx;
  font-weight: 200;
}

.menu-recommended .menu-recommended-right .menu-img {
  margin: 35rpx 0;
  width: 150rpx;
  float: right;
}

.menu-recommended .menu-recommended-right .menu-img.img2 {
  margin: 20rpx 0;
}

.menu-recommended .menu-recommended-right .menu-img image {
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50% 50% 50% 50%;
}

.menu-recommended .menu-recommended-right .empty-box {
  float: left;
  margin-left: 20rpx;
}

.menu-recommended .menu-recommended-right {
  width: 50%;
  float: right;
}

.menu-recommended .menu-recommended-right .li-1 {
  height: 163rpx;
  box-sizing: content-box;
}

.menu-recommended .menu-recommended-right .li-1.b {
  border-bottom: 1px solid #f0f0f0;
}

.menu-recommended {
  overflow: hidden;
  background: #fff;
  border-bottom: 20rpx solid #f0f0f0;
}

.scroll_title {
  background: #fff;
  padding: 40rpx 30rpx 0 30rpx;
  font-size: 32rpx;
}
