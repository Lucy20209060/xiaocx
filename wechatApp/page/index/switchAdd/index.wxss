.switchAdd .add_ul .add_li {
  height: 135rpx;
  position: relative;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;

  overflow: hidden;
}

.ac{
    transition: all 0.3s ease;
}

.switchAdd .add_ul .add_li image {
  width: 27rpx;
  height: 34rpx;
  position: absolute;
  left: 30rpx;
  top: 75rpx;
}

.switchAdd .add_ul .add_li .tit {
  height: 38rpx;
  overflow: hidden;
  padding-left: 50rpx;
  font-size: 32rpx;
  color: #333;
  max-width: 490rpx;
}

.switchAdd .add_ul .add_li .t {
  margin-top: 10rpx;
  line-height: 42rpx;
  padding-left: 50rpx;
  font-size: 26rpx;
  color: #999;
  max-width: 490rpx;
  min-height: 80rpx;
  max-height: 86rpx;
  overflow: hidden;
}

.switchAdd .add_ul .add_li .num {
  position: absolute;
  top: 60rpx;
  right: 30rpx;
  font-size: 40rpx;
  color: #ff8400;
}

.switchAdd .add_ul .add_li .num text{
  color: #cdcdcd;
}
.switchAdd .add_ul .add_li.aaa{
  z-index: 99999999;
  height: 280rpx;
}

.switchAdd .add_ul .add_li.aaa .tit{
  color: #111;

}

.i_btn{
  height: 90rpx;
  color: #fff;
  margin:30rpx 0rpx 20rpx;
  line-height: 90rpx;
  border-radius: 10rpx;
  text-align: center;
}
.i_btn.i_btn2{
  background: #ff8400;
}

.switchAdd .top{
  height: 156rpx;
  border-bottom: 10rpx solid #e6e6e5;
  padding: 34rpx 30rpx 0;
  box-sizing: border-box;
}

.switchAdd .top .city{
  float: left;
  height: 80rpx;
  line-height: 73rpx;
  color: #666;
  width: 100%;
  position: relative;
  box-sizing: border-box;
  padding-right: 80rpx;
}

.switchAdd .top .city text{
  display: block;
  overflow: hidden;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 10rpx;
}

.switchAdd .top .city image{
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.switchAdd .top .border{
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
}