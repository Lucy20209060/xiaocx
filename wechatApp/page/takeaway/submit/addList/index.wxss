.addList{
border-bottom: 20rpx solid #f0f0f0;
}

.addList .li{
  border-top: 20rpx solid #f0f0f0;
  padding:0 30rpx;
  font-size: 28rpx;
}

.addList .li .top{
  line-height: 80rpx;
}

.addList .li .top .t2{
  float: right;
}

.addList .li .more .t2{
  border-top: 1rpx solid #f0f0f0;
  display: block;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 15rpx;
  line-height: 45rpx;
  padding: 14rpx 0;
  overflow: hidden;
  font-size: 26rpx;
}

.addList .li .bottom{
  margin-bottom: 18rpx;
  position: relative;
  height:50rpx;
}

.addList .li .bottom text.def{
  background: url('https://lingju360.natappvip.cc/miniapp/resources/image/icon-default@2x.png') no-repeat center left;
  background-size: 30rpx 32rpx;
  padding-left: 40rpx;
  display: block;
  position: absolute;
  left: 0rpx;
  top: 4rpx;
}

.addList .li .bottom text.def.active{
  background: url('https://lingju360.natappvip.cc/miniapp/resources/image/icon-default-Selected@2x.png') no-repeat center left;
  background-size: 30rpx 32rpx;
}



.addList .li .bottom text.del{
  background: url('https://lingju360.natappvip.cc/miniapp/resources/image/icon-delete@2x.png') no-repeat center left;
  background-size: 30rpx 32rpx;
  padding-left: 40rpx;
  display: block;
  position: absolute;
  right: 30rpx;
  top: 4rpx;
}

.addList .li .bottom text.edit{
  background: url('https://lingju360.natappvip.cc/miniapp/resources/image/icon-edit@2x.png') no-repeat center left;
  background-size: 30rpx 32rpx;
  padding-left: 40rpx;
  display: block;
  position: absolute;
  right: 170rpx;
  top: 4rpx;
}