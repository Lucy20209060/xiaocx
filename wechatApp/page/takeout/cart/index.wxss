.take-out-box {
  max-width: 750px;
  min-width: 300px;
  margin: 0 auto;
  /*border: 1px solid blue;*/
}

/*头部*/
page{
  background: #f0f0f0;
}

.right-scroll .li .more view.t1,.max_box .more view.t1{
  color: #666;
  font-size: 30rpx;
  font-weight: 800;
}

.right-scroll .li .more .t3 view {
  font-size: 34rpx;
  float: left;
}
.right-scroll .li .more .t2{
  padding: 8rpx 0;
}
.right-scroll .li .more .t2, .right-scroll .li .more .t3 {
  font-size: 24rpx;
  color: #999;
}
.right-scroll .li .more .t3 {
  color: #ff8400;
}
.right-scroll .li .more .t3 .n {
  font-size: 24rpx;
  transform: translateY(10rpx);
}

.right-scroll .li .jia,.yes-select-menu-box .ul_menu .li_menu .jia {
position: absolute;
  bottom: 20rpx;
  right: 0rpx;
  width: 50rpx;
  height: 50rpx;
}

.right-scroll .li .imgbox{
  
  left: 20rpx;
}
.right-scroll .li .jian,.yes-select-menu-box .ul_menu .li_menu .jian {
  right: 100rpx;
}

.right-scroll .li .num,.yes-select-menu-box .ul_menu .li_menu .num {
  right: 52rpx;
  line-height: 50rpx;
  text-align: center;
}

.footer {
  position: fixed;
  bottom: -1rpx;
  height: 100rpx;
  width: 100%;
  left: 0;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  z-index: 9999999999999999999;
}

.footer .rmb {
  color: #ff8400;
  line-height: 100rpx;
  padding-left: 100rpx;
  float: left;
}

.footer .sub {
  top: 0px;
  position: absolute;
  right: 0px;
  margin: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
  width: 200rpx;
  background-color: #ff8400;
  font-size:30rpx;
  border-radius: 8rpx;
}

.footer .sub.no{
  background: #f0f0f0;
}

.footer .num {
  position: absolute;
  background: #fff;
  width: 60rpx;
  height: 60rpx;
  left: 20rpx;
  top: 20rpx;
  z-index: 9999999999;
  text-align: center;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #ff8400;
  border-radius: 50%;
  border:2rpx solid #ff8400;
  box-sizing: border-box;
}

.footer image {
  margin: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.yes-select-menu-box .input_box{
  border-top: 1rpx solid #f0f0f0;
  padding: 30rpx;
  background: #fff;
  border-radius:0 0 8rpx 8rpx; 
}

.yes-select-menu-box .input_box input{
  background: #f0f0f0;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  color: #333;
}
.yes-select-menu-box {
  box-sizing: border-box;
  padding: 20rpx;
  max-width: 750px;
  min-width: 300px;
  margin: 0 auto 0 auto;
  width: 100%;
  background-color: #f0f0f0;
  overflow: hidden;
  border-top: 1px solid #eee;
  transition: all 0.3s ease;
  z-index: 999999999;
  margin-bottom: 100rpx;
}

.yes-select-menu-box .yes-select-menu {
  padding: 0 30rpx;
  height: 80rpx;
  color: #333;
  background: #fff;
  border-radius: 8rpx 8rpx 0 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.yes-select-menu-box .yes-select-menu  .cl{
  font-size: 28rpx;
  position: relative;
  padding-left: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.yes-select-menu-box .yes-select-menu  .cl.add{
  color: #ff8400;
  margin-left: 20rpx;
}

.yes-select-menu-box .yes-select-menu  .cl image{
  position: absolute;
  left: 0rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.yes-select-menu-box .yes-select-menu text {
  display: block;
  line-height: 80rpx;
}

.mask-layer-box {
  position: fixed;
  top: 0;
  max-width: 750px;
  min-width: 300px;
  margin: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: block;
  z-index: 999999999;
  
}

.yes-select-menu-box .ul_menu {
  background: #fff;
  padding:0 30rpx;
  width: auto;
  z-index: 999999999999999;
}

.yes-select-menu-box .ul_menu .li_menu{
  height: 180rpx;
  font-size: 28rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1px solid #f0f0f0;
}

.yes-select-menu-box .ul_menu .li_menu .t{
  float: left;
  color: #333;
  padding-left: 20rpx;
}

.yes-select-menu-box .ul_menu .li_menu .t .tit{
  height: 50rpx;
  line-height: 50rpx;
  font-weight: 800;
}

.yes-select-menu-box .ul_menu .li_menu .t .num2{
   height: 40rpx;
   line-height: 40rpx;
}

.yes-select-menu-box .ul_menu .li_menu:last-of-type{
  border-bottom: 0px;
}
.yes-select-menu-box .ul_menu .li_menu .imgbox {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  float: left;
  border-radius: 70rpx;
}
.yes-select-menu-box .ul_menu .li_menu .imgbox image{
  width: 100%;
  height: 100%;
}


.yes-select-menu-box .ul_menu .li_menu .jia{
  bottom: 35rpx;
}

