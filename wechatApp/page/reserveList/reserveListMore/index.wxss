.bottom{
  position: absolute;
  bottom: 0px;
  border-top: 1rpx solid #c8c8c8;
  width: 100%;
  height: 125rpx;
  text-align: center;
}

.bottom .b{
  display: inline-block;
  box-sizing: border-box;
  margin:30rpx 15rpx 0;
  border:2rpx solid #c8c8c8;
  color: #666;
  padding: 0 20rpx;
  font-size: 30rpx;
  width: 332rpx;
  text-align: center;
  border-radius: 8rpx;
  line-height: 65rpx;
}

.bottom2 .b{
  width: 290rpx;
}

.bottom2 .b.r{
  background: #ff8400;
  color: #fff;
  border:2rpx solid #ff8400;
}

.zz{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.3)
}

.alert {
  position: fixed;
  top: -50%;
  margin-top: 700rpx;
  width: 100%;
  box-sizing: border-box;
  padding:0 30rpx;
}

.alert .box{
  overflow: hidden;
  background: #fff;
  border-radius: 10rpx;
  position: relative;
}

.alert .box .tit{
  background: #f0f0f0;
  text-align: center;
  line-height: 80rpx;
  color: #333;
  font-size: 32rpx;
}

.alert .box .radio_box{
  padding: 50rpx 65rpx 130rpx;
}

.alert .radio{
  position: relative;
  line-height: 50rpx;
  display: block;
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 50rpx;
  padding-left: 60rpx;
}

.alert .radio radio{
  margin-right: 20rpx;
  position: absolute;
  left: 0rpx;
  top: -2rpx;
}


