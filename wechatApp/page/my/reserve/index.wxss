
.reserve-box {
  border-top: 20rpx solid #f0f0f0;
  padding: 0rpx 30rpx;
  background: #fff;
}
.reserve-box .li{
  border: 2rpx solid #f0f0f0;
  box-shadow: 0 2rpx 3rpx rgba(0, 0, 0, 0.3);
  margin-top: 30rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.reserve-box .li .Water-account-box{
  height: 60rpx;
  line-height: 60rpx;
  padding:0 30rpx; 
  background: #f0f0f0;
  font-weight: 800;
  font-size: 32rpx;
}

.reserve-box .li .Water-account-box text{
  font-weight: 400;
  color: #ff8400;
}

.reserve-box .li .type-box{
  padding: 10rpx 30rpx;
}
.reserve-box .li .type-box .p text{
  font-size: 24rpx;
  padding: 1rpx 30rpx 1rpx 0;
  display: inline-block;
  color: #888;
} 

.reserve-box .li .type-box .p{
  font-size: 24rpx;
  color: #777777;
}

.reserve-box .number-type-box{
  border-top: 1rpx solid #f0f0f0;
  color: #02c40b;
  padding: 10rpx 30rpx;
  overflow: hidden;
}