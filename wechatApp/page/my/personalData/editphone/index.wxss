.list_box{
  border-top: 20rpx solid #f0f0f0;
  background: #fff;
}



.list_box .li{
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #333;
  position: relative;
}

.list_box .li::after{
  content: '';
  position: absolute;
  bottom: -1rpx;
  height: 1rpx;
  left: 0rpx;
  width: 100%;
  background: #f0f0f0;
}

.list_box .li .title{
  float: left;
}


.list_box .li .more{
  text-align: left;
  height: 80rpx;
  line-height: 80rpx;
  font-family: "微软雅黑";

}



.list_box .li .right_icon{
  width: 30rpx;
  height: 30rpx;
  background: url(https://lingju360.natappvip.cc/miniapp/resources/images/memberCenter/ico3.png) no-repeat;
  background-size: 500rpx 760rpx;
  background-position: -454rpx -160rpx;
  margin-top:27rpx;
  margin-left: 20rpx;
}


